<?xml version="1.0"?>
<launch>

    <!-- Arguments -->
    <arg name="robot_id" default="testRobotId"/>
    <arg name="skills_file" default="test_skills.yaml" />
    <arg name="skills_path" default="$(find task_manager_common)/test/skills"/>

    <!-- Test Skills Loader -->
    <include file="$(find task_manager_common)/launch/load_skills.launch">
        <arg name="robot_id" value="$(arg robot_id)"/>
        <arg name="skills_path" value="$(arg skills_path)"/>
        <arg name="skills_file" value="$(arg skills_file)" />
    </include>

    <!-- Fake Skills -->
    <include file="$(find task_manager_server)/launch/fake_skills.launch">
        <arg name="robotId" value="$(arg robot_id)"/>
    </include>

    <!-- Integration Test -->
    <test test-name="integration_tests" pkg="task_manager_server" type="integration_tests.py" />

</launch>
